
    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input 
                type="url" 
                name="avatar_url"
                placeholder="http://" 
                value="{{ member.avatar_url }}"
            >
        </div>
    </div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Nome do Membro"
            value="{{ member.name }}"
        >
    </div>
</div>

    <div class="item">
        <div>Email</div>
        <div>
            <input 
                type="email"
                name="email"
                value="{{ member.email }}"
            >
        </div>
    </div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ member.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input
            type="radio" 
            name="gender" 
            value="F" 
            {% if instructo.gender == 'F' %}
                checked
            {% endif %}>Feminino
    </span>
    <span>
        <input 
            type="radio"
            name="gender" 
            value="M"
            {% if instructo.gender == 'M' %}
                checked
            {% endif %}
            >Masculino
    </span>
</div>
</div>

<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="sangue">
            <option value="A+"
            {% if member.sangue == "A+"%}selected{%endif%}>
                A+
            </option>
            <option value="A-"
            {% if member.sangue == "A-"%}selected{%endif%}>
                A-
            </option>
            <option value="B+"
            {% if member.sangue == "B+"%}selected{%endif%}>
                B+
            </option>
            <option value="B-"
            {% if member.sangue == "B-"%}selected{%endif%}>
                B-
            </option>
            <option value="AB+"
            {% if member.sangue == "AB+"%}selected{%endif%}>
                AB+
            </option>
            <option value="AB-"
            {% if member.sangue == "AB-"%}selected{%endif%}>
                AB-
            </option>
            <option value="O+"
            {% if member.sangue == "O+"%}selected{%endif%}>
                O+
            </option>
            <option value="O-"
            {% if member.sangue == "O-"%}selected{%endif%}>
                O-
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input 
            type="number" 
            name="weight"
            value="{{ member.weight }}"
        >
    </div>
</div>

<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input 
            type="number" 
            name="height"
            value="{{ member.height }}"
        >
    </div>
</div>

    <button type="submit">Salvar</button>